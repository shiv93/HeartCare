<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shivangshu.heartcare">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Details"
            android:label="@string/title_activity_details" />
        <activity
            android:name=".DisplayAdvice"
            android:label="@string/title_activity_display_advice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BluetoothData"
            android:label="@string/title_activity_bluetooth_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calling"
            android:label="@string/title_activity_calling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProcessSelect"
            android:label="@string/title_activity_process_select1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HeartDetails"
            android:label="@string/title_activity_heart_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
